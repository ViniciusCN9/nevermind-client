<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nevermind.client.controller.LoginController">

   <ImageView fx:id="logo" fitHeight="200.0" fitWidth="200.0" preserveRatio="true"/>

   <VBox alignment="CENTER" maxWidth="-Infinity" prefWidth="300.0" spacing="40.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>

      <VBox alignment="CENTER" spacing="15.0">
         <TextField fx:id="usernameInput" promptText="Username"/>
         <PasswordField fx:id="passwordInput" promptText="Password"/>
      </VBox>

      <VBox spacing="5.0">
         <Button fx:id="loginButton" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" text="Login"/>
         <Hyperlink fx:id="signupLink" text="Signup"/>
      </VBox>
   </VBox>
</VBox>
