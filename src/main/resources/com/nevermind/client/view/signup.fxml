<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nevermind.client.controller.SignupController">
   <VBox alignment="CENTER" maxWidth="-Infinity" prefWidth="300.0" spacing="40.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NEVERMIND">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
      <VBox alignment="CENTER" spacing="15.0">
         <TextField fx:id="usernameInput" promptText="Username" />
         <PasswordField fx:id="passwordInput" promptText="Password" />
         <TextField fx:id="emailInput" promptText="Email" />
      </VBox>
      <VBox spacing="5.0">
         <Button fx:id="signupButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Signup" />
         <Hyperlink fx:id="loginLink" text="Login" />
      </VBox>
   </VBox>
</VBox>
