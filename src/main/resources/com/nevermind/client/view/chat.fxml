<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.nevermind.client.controller.ChatController">
    <TextArea fx:id="chatArea" editable="false" prefHeight="400"/>
    <HBox spacing="10">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Type a message..."/>
        <Button text="Send" onAction="#sendMessage"/>
    </HBox>
</VBox>